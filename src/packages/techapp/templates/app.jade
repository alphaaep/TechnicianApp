head
    Title AeP IT Management App

template(name="layout")
    .wrapper
        .header_bar
            +brand
            +profileMini
        .inner
            +nav
            .contentpanel
                +yield
template(name="nav")
    .left_nav
        .left_nav_slidebar
            ul
                li.left_nav_active.theme_border
                    +each items
                        +navMenu

template(name="brand")
    .brand
        .logo(style="display:block")
            span.theme_color AeP IT
            .small_logo(style="display:none")
                img(src="images/s-logo.png",width="50",height="47",alt="s Logo")
                img(src="images/r-logo.png",width="122",height="20",alt="r Logo")

template(name="navMenu")
    +if isInRole role
        a(href='#')
            i.fa(class="{{icon}}")
            |  {{title}}
            span.left_nav_pointer
            span.plus
                i.fa.fa-plus
        ul.opened(style='display:block')
            +each links
                +navLink
template(name="navLink")
    li: a(href="{{ pathFor link params}}")
        span
        i.fa.fa-circle(class="{{ isActiveRoute link }}")
        b(class="{{ isActiveRoute link }}") {{ title }}

template(name="timeline")