template(name="user")
    .col-md-4
        .profile_bg
            .user-profile-sidebar
                .row
                    .col-md-4
                        img(src="http://placehold.it/100")
                    .col-md-8
                        .user-identity
                            h4
                                strong {{ profile.name }}
            .user-button
                .row
                    .col-sm-6
                        a.btn.btn-primary.btn-rounded(type="button",href="mailto:{{ email }}",data-toggle="tooltip", data-placement="top", title="send an email to {{email}}")
                            i.fa.fa-envelope
                            | Send Message
                    .col-sm-6
                        button.btn.btn-danger.btn-rounded.delete(type="button")
                            i.fa.fa-trash
                            | Delete
            h6:strong Connection
            div
                ul.social_icons
                    li
                        a(href="mailto:{{ email }}")
                            i.fa.fa-envelope-o
                    +if profile.skype
                        li(data-toggle="tooltip", data-placement="top", title="{{profile.skype}}")
                            i.fa.fa-skype
                    +if profile.phone
                        li(data-toggle="tooltip", data-placement="top", title="profile.phone")
                            i.fa.fa-phone

template(name="addUser")
    .row
        .col-md-6
            .block-web
                .header
                    .actions
                    h3.content-header New User
                .porlets-content
                    form.form-horizontal.row-border(action='')
                        .form-group
                            label.col-sm-3.control-label Name
                            .col-sm-9
                                input.form-control(name="name",type='text', placeholder="First and Last Name")
                        .form-group
                            label.col-sm-3.control-label Email
                            .col-sm-9
                                .input-group
                                    span.input-group-addon @
                                    input.form-control(name="email",type='text', placeholder="user@domain.com")
                        .form-group
                            label.col-sm-3.control-label Username
                            .col-sm-9
                                input.form-control(name="username",type='text', placeholder="Username for logging in")
                        .form-group
                            label.col-sm-3.control-label Password
                            .col-sm-9
                                input.form-control(name="password",type='password')
                        .form-group
                            label.col-sm-3.control-label Phone
                            .col-sm-9
                                input.form-control(name="phone",type='text', placeholder='012 345 6789')
                        .form-group
                            label.col-sm-3.control-label Skype
                            .col-sm-9
                                input.form-control(name="skype",type='text', placeholder='Skype')
                        .form-group
                            .control-label.col-sm-3 Roles
                            .col-sm-9
                                label.checkbox-inline
                                    input#admin(name="role",type="checkbox",value="admin")
                                    | Admin
                                label.checkbox-inline
                                    input#manager(name="role",type="checkbox",value="manager")
                                    | Manager
                                label.checkbox-inline
                                    input#technician(name="role",type="checkbox",value="technician")
                                    | Technician
                        .bottom
                            button.btn.btn-primary(type='submit') Register
                            button.btn.btn-default(type='reset') Reset

template(name="userDetails")
    .pull-left.breadcrumb_admin.clear_both
        .pull-left.page_title.theme_color
            h1 Users
            h2 {{ profile.name }}

        .pull-right
            //a.btn.btn-primary.btn-rounded.add_user(type="button",href="{{pathFor 'addUser'}}")
                //i.fa.fa-plus
                | New User
    .container.clear_both.padding_fix
        .page-content
            .row
                .col-md-8
                    .block-web.full
                        ul.nav.nav-tabs.nav-justified.nav_bg
                            li.active: a(href="#about",data-toggle="tab")
                                i.fa.fa-user
                                | About
                            li: a(href="#edit-profile",data-toggle="tab")
                                i.fa.fa-pencil
                                | Edit
                            li: a(href="#activities",data-toggle="tab")
                                i.fa.fa-laptop
                                | Activities
                        .tab-content
                            #about.tab-pane.animated.fadeInRight.active: .user-profile-content
                                h5 About {{ profile.name }}
                                hr
                                .row
                                    .col-sm-6
                                        h5: strong Contact
                                        +if profile.phone
                                            address
                                                strong Phone
                                                br
                                                | {{ profile.phone }}
                                        +if profile.skype
                                            address
                                                strong Skype
                                                br
                                                | {{ profile.skype }}
                                        +each emails
                                            address
                                                strong Email
                                                | {{ address }}
                                    .col-sm-6
                                        h5: strong Roles
                                        +each roles
                                            p {{ this }}
                            #edit-profile.tab-pane.animated.fadeInRight: .user-profile-content
                                form.edit_user(role="form")
                                    .form-group
                                        label(for="name") Full Name
                                        input#name.form-control(name="name",type="text" value="{{ profile.name }}")
                                    .form-group
                                        label(for="email") Email
                                        input#email.form-control(name="email",type="email" value="{{ email }}")
                                    //.form-group
                                    //    label(for="username") Username
                                    //    input#username.form-control(name="username",type="text" value="{{ username }}")
                                    .form-group
                                        label(for="phone") Phone
                                        input#phone.form-control(name="phone",type="text" value="{{ profile.phone }}")
                                    .form-group
                                        label(for="skype") Skype
                                        input#skype.form-control(name="skype",type="text" value="{{ profile.skype }}")
                                    .form-group
                                        .control-label.col-sm-2 Roles
                                        .col-sm-9
                                            label.checkbox-inline
                                                input#admin(name="role",type="checkbox",checked="{{isAdmin}}", value='admin')
                                                | Admin
                                            label.checkbox-inline
                                                input#manager(name="role",type="checkbox",checked="{{isManager}}", value="manager")
                                                | Manager
                                            label.checkbox-inline
                                                input#technician(name="role",type="checkbox",checked="{{isTechnician}}", value="technician")
                                                | Technician
                                    button.btn.btn-primary(type="submit") Save
                            #activities.tab-pane.animated.fadeInRight
                                ul.media-list
                                    li.media: p
                                        a(href="#"): strong {{profile.name}}
                                        | assigned
                                        a(href="#"): strong _technician_
                                        | to
                                        a(href="#"): strong _client_
                                        | 's callout
                                        a(href="#"): _callout_
                                        i 30 minutes ago
                                    li.media: p
                                        a(href="#"): strong {{profile.name}}
                                        | created user
                                        a(href="#"): strong _user name_
                                        | with roles
                                        a(href="#"): strong _roles_
                                        i yesterday